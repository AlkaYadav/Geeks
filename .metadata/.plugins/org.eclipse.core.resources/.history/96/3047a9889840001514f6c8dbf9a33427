/*
 * CoinChange.cpp
 *
 *  Created on: Aug 12, 2015
 *      Author: user
 *      Description:Minimum no. of coins to make change
 *      C(P)=1+min(C(p-vi))for all i
 */
void coinChange(int coins[],int noOfCoins,int sum){
	int table[sum+1];
	table[0]=0;
	int coins;
	for(int i=1;i<=sum;i++){
		coins=INT_MAX;
		for(int j=0;j<noOfCoins;j++){
			if(i>=coins[j]){
				coins=min(coins,table[i-coins[j]]);
			}
		}
		if(coins<INT_MAX){
			table[i]=coins+1;
		}
		else{
			table[i]=INT_MAX;
		}
	}
	cout<<"Minimum n. of coins are "<<table[sum]<<endl;
}



