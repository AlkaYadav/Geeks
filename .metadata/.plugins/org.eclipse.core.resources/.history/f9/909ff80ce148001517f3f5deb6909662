//Implement k stacks in an array

class kStacks{
	int *arr;
	int k;
	int n;
	int *top;
	int *next;
public:
	kStacks(int arr[],int k,int n);
	void push(int sn,int item);
	int pop(int sn);
};

kStacks::kStacks(int arr[],int k,int n){
	top=new int[k];
	next=new int[n];
	for(int i=0;i<k;i++){
		top[i]=-1;
	}
	for(int i=0;i<k;i++){
		next[i]=i+1;
	}
}

