//Sort an array according to the order defined by another array

#include<iostream>
#include<limits.h>
#include<map>
using namespace std;

void sortAccording(int a1[],int a2[],int s1,int s2){
	map<int,int> m;
	//Create hash map for first array
	int k=0;
	for(int i=0;i<s1;i++){
		m[a1[i]]+=1;
	}
	for(int j=0;j<s2;j++){
		if(m[a2[j]]){
			while(m[a2[j]]){
			a1[k++]=a2[j];
			m[a2[j]]--;
			}
			m.erase(a2[j]);
		}
	}
}


