#define R 3
#define C 3
#include<stdio.h>
void minCostPath(int cost[R][C],int m,int n){
	int tc[R][C];
	tc[0][0]=cost[0][0];
	for(int i=1;i<m;i++){
		tc[i][0]=cost[i][0]+tc[i-1][0];
	}
	for(int j=1;j<n;j++){
			tc[0][j]=cost[0][j]+tc[0][j-1];
	}
	for(int i=1;i<m;i++){
		for(int j=1;j<n;j++){
			tc[i][j]=min(tc[i-1][j],min(tc[i][j-1],tc[i-1][j-1]))+cost[i][j];

		}
	}
}



