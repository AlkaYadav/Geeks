void func(int a[],char *b){
    cout<<"A"<<sizeof(a)<<endl;
    cout<<"B"<<sizeof(b)<<endl;
}
int main()
{
	int arri[] = {1, 2 ,3};
	int *ptri = arri;

	char arrc[] = {1, 2 ,3};
	char *ptrc = arrc;
    cout<<"In main "<<endl;
    cout<<"A"<<sizeof(arri)<<endl;
    cout<<"B"<<sizeof(arrc)<<endl;
	func(arri,arrc);

