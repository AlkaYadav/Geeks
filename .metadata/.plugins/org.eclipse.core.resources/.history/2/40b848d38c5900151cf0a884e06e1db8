//Find the first repeating element in an array of integers
#include<iostream>
#include<map>
using namespace std;
void findFirstRepeating(int arr[],int n){
	map<int,int> m;
	int min_i=INT_MAX;
	for(int i=0;i<n;i++){
		if(m[arr[i]]){
			min_i=min(min_i,i);
			break;
		}
		m[arr[i]]=i;
	}
	cout<<"First epe "<<min_i<<endl;
}


int main(){
	int ar1[] = {10, 5, 3, 4, 3, 5, 6};

	int n1=sizeof(ar1)/sizeof(ar1[0]);


	findFirstRepeating(ar1,n1);
}
