 * countingSort.cpp
 *
 *  Created on: Sep 13, 2015
 *      Author: user
 */

void countingSort(int a[],int n,int k){
	int count[k];
	int output[n];
	for(int i=0;i<k;i++){
		count[i]=0;
	}
	for(int i=0;i<n;i++){
		count[a[i]]++;
	}
	for(int i=1;i<k;i++){
		count[i]+=count[i-1];
	}
	for(int i=0;i<n;i++){
		output[count[a[i]]-1]=a[i];
		count[a[i]]--;
	}
}


