#include<iostream>
#include<limits.h>
#include<map>
#include<cstring>
#include<algorithm>
using namespace std;
void countingSort(char a[],int n,int k){
	int count[k];
	char output[n];
	for(int i=0;i<k;i++){
		count[i]=0;
	}
	for(int i=0;i<n;i++){
		count[a[i]]++;
	}
	for(int i=1;i<k;i++){
		count[i]+=count[i-1];
	}
	for(int i=0;i<n;i++){
		output[count[a[i]]-1]=a[i];
		count[a[i]]--;
	}
	for(int i=0;i<n;i++){
		a[i]=output[i];
	}
}


int main(){
	int ar1[] = {1, 4, 1, 2, 7, 5, 2};
	char str[] = "geeksforgeeks";
	int len=strlen(str);

	int n1=sizeof(ar1)/sizeof(ar1[0]);
 int k=10;
	countingSort(str,len,255);
	for(int i=0;i<len;i++){
			cout<<ar1[i]<<" ";
		}
}
