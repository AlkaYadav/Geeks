//Count the number of occurrences in a sorted array
int first(int a[],int low,int high ,int ele){
	int mid=(low+high)/2;
	if(low>high){
		return -1;
	}
	if((a[mid]==ele)&&(a[mid-1]<ele || mid==0 || mid==high)){
		return mid;
	}
	if(a[mid]>ele){
		return first(a,low,mid-1,ele);
	}
	else{
		return first(a,mid+1,high,ele);
	}
}


