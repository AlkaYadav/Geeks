//Construct an array from its pair-sum array
#include<iostream>
using namespace std;
void pairSum(int arr[],int n){
	arr[0]=(arr[0]+arr[1]-arr[n-1])/2;
	for(int i=0;i<n-1;i++){
		arr[i+1]=arr[i]-arr[0];
	}
	for(int i=0;i<n;i++){
		cout<<arr[i]<<" ";
	}
}

int main(){
	int arr[] = {14, 9, 10, 11, 12, 7};
	int n=sizeof(arr)/sizeof(arr[0]);
	cout<<"Index "<<countOnes(arr,n);
}


