/*
 * EggDroppingPuzzle.cpp
 *
 *  Created on: Aug 12, 2015
 *      Author: user
 *      Description:Minimum no. of trials needed to find the critical floor in worst case
 */
#include<limits.h>
#include<iostream>
using namespace std;
int eggDropping(int n,int k){
	if(n==1){
		return k;
	}
	if(k==1||k==0){
		return k;
	}
	int min=INT_MAX;
	int count;
	for(int i=0;i<=k;i++){
		count=1+min(max(eggDropping(n-1,k-1),eggDropping(n,k-i)));
		if(count<min){
			min=count;
		}
	}
	return min;
}


int main(){
	cout<<"Minimum no. of trials needed to find the critical floor in worst case "<<eggDropping(2,10)<<endl;
}


