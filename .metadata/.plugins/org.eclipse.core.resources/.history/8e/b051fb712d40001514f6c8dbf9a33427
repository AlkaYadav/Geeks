#include<iostream>
#include<cstring>
using namespace std;

void LCS(char *X,char *Y,int m,int n){
	int LCS[m+1][n+1];
	char *lcs;
	//Initializing table
	for(int i=0;i<=m;i++){
		for(int j=0;j<=n;j++){
			LCS[i][0]=0;
			LCS[0][j]=0;
		}
	}

	//Fill the table
	for(int i=1;i<=m;i++){
		for(int j=1;j<=n;j++){
			if(X[i]==Y[j]){
				LCS[i][j]=1+LCS[i-1][j-1];
			}
			else{
				LCS[i][j]=max(LCS[i-1][j],LCS[i][j-1]);
			}
		}
	}

	//Length of LCS
	cout<<"Length of LCS "<<LCS[m][n]<<endl;

	//Printing LCS
	i=m;
	j=n;
	lcs=new char[LCS[m][n]+1];
	int k=0;
	while(i>0&& j>0){
		if(X[i-1]==Y[j-1]){
			lcs[k++]=X[i-1];
		}
		else{
			if(LCS[i][j-1]>LCS[i-1][j]){
				j--;
			}
			else{
				i--;
			}
		}
	}
}



int main(){
	char X[] = "AGGTAB";
	char Y[] = "GXTXAYB";
	LCS(X,Y,strlen(X),strlen(Y));
	return 0;
}
