#include <iostream>
using namespace std;

int main() {
	int ar1[] = {1, 4, 5, 7};
	int ar2[] = {10, 20, 30, 40};
	int x = 32;
	int arr1_size=sizeof(ar1)/sizeof(ar1[0]);
	int arr2_size=sizeof(ar2)/sizeof(ar2[0]);
	int ar3[arr1_size+arr2_size]={0};
	merge(arr3,ar1,ar2,arr1_size,arr2_size);
	return 0;
}
