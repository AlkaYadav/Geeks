// Description : Longest Increasing Subsequence
//============================================================================

#include <iostream>
#include<limits.h>
#include<stdlib.h>
using namespace std;

int longestIncreaingSubsequence(int arr[],int n){
	int *lis;
	int max_lis=0;
	lis=new int[n];
	for(int i=0;i<n;i++){
		lis[i]=1;
	for(int i=1;i<n;i++){
		for(int j=0;j<i;j++){
			if(arr[j]<arr[i]&& lis[i]<lis[j]+1){
				lis[i]=1+lis[j];
			}
		}
	}

	for(int k=0;k<n;k++){
		if(lis[k]>max_lis){
			max_lis=lis[k];
		}
	}
	free(lis);
	}
	return max_lis;
}
int longestIncreaingSubsequence_1(int arr[],int n){
	int *lis,i,j,max=0;
	lis=new int[n];
	for(i=0;i<n;i++){
		lis[i]=1;
	}
	for(i=1;i<n;i++){
		for(j=0;j<i;j++){

			if(arr[j]<arr[i] && lis[i]<lis[j]+1){
				lis[i]=lis[j]+1;
			}
		}
	}
	for(i=0;i<n;i++){
		if(max<lis[i]){
			max=lis[i];
		}
	}
	delete lis;
	return max;
}
int main() {
	int arr_lis[]={10, 22, 9, 33, 21, 50, 41, 60, 80};
	cout<<"LIS is "<<longestIncreaingSubsequence_1(arr_lis,9);
	return 0;
}
